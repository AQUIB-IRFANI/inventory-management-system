@{
}
@model InventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <h2 class="mb-4">✏️ Edit Product</h2>

    <form asp-action="Edit" method="post" class="row g-3">
        <input type="hidden" asp-for="ProductID" />

    
        <div class="col-md-6">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Category" class="form-label">Category</label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="col-md-4">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" class="form-control" type="number" />
        </div>

        <div class="col-md-4">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
        </div>

        <div class="col-md-4">
            <label asp-for="Supplier" class="form-label">Supplier</label>
            <input asp-for="Supplier" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="AddedDate" class="form-label">Added Date</label>
            <input asp-for="AddedDate" class="form-control" type="date" />
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-warning">Update</button>
            <a href="/Product/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>